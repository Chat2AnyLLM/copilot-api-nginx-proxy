FROM ubuntu:latest

# Install Node.js and npm
RUN apt-get update && apt-get install -y nodejs npm && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Accept GitHub token as environment variable
ENV GITHUB_TOKEN=""
ENV ACCOUNT_TYPE="enterprise"

# Start the copilot-api service
CMD ["bash", "-c", "npx copilot-api@latest start --port 5001 --github-token ${GITHUB_TOKEN} --account-type ${ACCOUNT_TYPE}"]
